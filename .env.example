# Application
APP_NAME=KaminAI
DEBUG=false
API_VERSION=v1

# MongoDB
MONGODB_URI=mongodb://admin:password123@localhost:27017
MONGODB_DATABASE=kaminai

# GitHub (for portfolio - optional)
GITHUB_TOKEN=
GITHUB_USERNAME=YourGitHubUsername

# JWT Authentication
JWT_SECRET_KEY=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password_here

# Admin Profile (used to populate Author field)
# Display name: Prefers Nickname if set, otherwise "Last Name First Name"
ADMIN_FIRST_NAME=John
ADMIN_LAST_NAME=Doe
ADMIN_NICKNAME=
ADMIN_BIRTHDAY=

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ===== AI Chat System =====

# Google Gemini AI (required for chat)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_EMBEDDING_MODEL=text-embedding-004

# FAISS Vector Store (for code search)
FAISS_INDEX_PATH=./data/faiss_index
EMBEDDING_DIMENSION=768

# Bio file path (for AI persona)
BIO_FILE_PATH=./my_bio.md

# LangSmith tracing (optional - for debugging)
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=kaminai
LANGSMITH_TRACING=false
